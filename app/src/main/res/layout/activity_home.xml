<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.home.HomeActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/homeactivity_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">></android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@mipmap/rectangle"
        android:layout_weight="1">
        <RadioGroup
            android:id="@+id/homeactivity_radiogroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/homeactivity_radiobutton_hone"
                android:layout_marginLeft="@dimen/dp_35"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_weight="1"
                android:button="@null"
                android:background="@mipmap/common_tab_btn_home_s"/>
            <RadioButton
                android:id="@+id/homeactivity_radiobutton_circle"
                android:layout_width="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_35"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_20"
                android:button="@null"
                android:background="@mipmap/common_tab_btn_circle_n"/>
            <RadioButton
                android:id="@+id/homeactivity_radiobutton_shoopingcart"
                android:layout_width="@dimen/dp_60"
                android:layout_marginLeft="@dimen/dp_35"
                android:paddingLeft="@dimen/dp_50"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_60"
                android:button="@null"
                android:background="@mipmap/commom_tab_btn_shoppingcart_n"/>
            <RadioButton
                android:id="@+id/homeactivity_radiobutton_list"
                android:layout_width="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_35"
                android:layout_height="@dimen/dp_20"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/dp_18"
                android:button="@null"
                android:background="@mipmap/common_tab_btn_list_n"/>
            <RadioButton
                android:id="@+id/homeactivity_radiobutton_my"
                android:layout_width="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_35"
                android:layout_height="@dimen/dp_20"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/dp_18"
                android:button="@null"
                android:background="@mipmap/common_tab_btn_my_n"/>
        </RadioGroup>
    </LinearLayout>

</LinearLayout>