<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ShoopingCartFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/gouwuche_recy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_height="50dp">

        <CheckBox
            android:id="@+id/gouwuche_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全选"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textColor="#666666"
            android:textSize="12sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合计: "
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:textColor="#666666"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/gouwuche_textview_zongji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥0 "
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:textColor="#ff0606"
            android:textSize="16sp"
            />

    </LinearLayout>
    <Button
        android:id="@+id/gouwuche_button_jiesuan"
        android:layout_width="118dp"
        android:layout_height="50dp"
        android:text="去结算"
        android:background="#ff5e70"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:layout_marginLeft="100dp"

        />
</RelativeLayout>