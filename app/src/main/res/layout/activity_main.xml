<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/loginback"
    tools:context=".MainActivity">



    <EditText
        android:id="@+id/activity_edittext_login_phonenum"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_160"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_36"
        android:hint="手机号"
        android:paddingLeft="@dimen/dp_50"
        android:inputType="number"
        android:maxLength="11"
        android:paddingBottom="@dimen/dp_20"
        android:textSize="18sp"
        android:textColorHint="#ffffff"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_160"
        android:src="@mipmap/login_icon_phone" />

    <EditText
        android:id="@+id/activity_edittext_login_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_36"
        android:layout_marginLeft="@dimen/dp_36"
        android:inputType="textPassword"
        android:layout_marginTop="@dimen/dp_230"
        android:paddingLeft="@dimen/dp_50"
        android:paddingBottom="@dimen/dp_20"
        android:digits="0123456789qwertyuioplkjhgfdsazxcvbnm.+"
        android:hint="密码"
        android:textColorHint="#ffffff"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_230"
        android:src="@mipmap/login_b" />
    <ImageView
        android:id="@+id/activity_imageview_login_hidepassword"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_36"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_240"
        android:src="@mipmap/login_c" />

    <CheckBox
        android:id="@+id/activity_checkbox_rememberpassword"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:buttonTint="@color/whilte"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_300"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="记住密码"

        android:textColor="#ffffff"
        android:layout_marginLeft="@dimen/dp_66"
        android:layout_marginTop="@dimen/dp_300" />

    <TextView
        android:id="@+id/activity_textview_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="快速注册"
        android:textColor="#ffffff"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_300" />


    <Button
        android:id="@+id/activity_button_login"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_120"
        android:background="@drawable/shape8dp"
        android:text="登录"
        android:textSize="18sp"
        android:textColor="#ff5f71"
        android:layout_centerHorizontal="true"

        />

</RelativeLayout>