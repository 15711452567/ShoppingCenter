<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/wodeyeman"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="@drawable/shape20dp"
        android:layout_alignParentLeft="true">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/wodefragment_wodetouxiang"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            fresco:placeholderImage="@mipmap/my_userimage"
             />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/wodefragment_wodemingzi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="吃不胖的小姐姐" />
            <ImageView
                android:src="@mipmap/my_icon_address_n"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="240dp"
                android:layout_marginLeft="30dp"/>
            <ImageView
                android:src="@mipmap/my_icon_foot_n"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="160dp"
                android:layout_marginLeft="30dp" />
            <ImageView
                android:src="@mipmap/my_icon_circle_n"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="120dp"
                android:layout_marginLeft="30dp"/>
            <ImageView
                android:src="@mipmap/my_icon_information_n"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="30dp"/>
            <ImageView
                android:src="@mipmap/my_icon_wallet_n"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="200dp"
                android:layout_marginLeft="30dp"/>
            <TextView
                android:id="@+id/wodefragment_textview_gerenziliao"
                android:text="个人资料"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="85dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/wodefragment_textview_wodequanzi"
                android:text="我的圈子"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="125dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/wodefragment_textview_wodezuji"
                android:text="我的足迹"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="165dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/wodefragment_textview_wodeqianbao"
                android:text="我的钱包"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="205dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/wodefragment_textview_wodeshouhuodizhi"
                android:text="我的收货地址"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="245dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
