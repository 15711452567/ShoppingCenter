<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="166dp"
    android:layout_marginRight="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="150dp"
        android:layout_height="116dp"
        android:layout_marginTop="10dp"
        fresco:placeholderImage="@mipmap/ic_launcher"
        android:id="@+id/shouyefragment_imagerview_rexiaoshangpin"
        />

    <TextView
        android:id="@+id/shouyefragment_textview_rexiaoshangpinshang"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="asd"
        fresco:layout_constraintTop_toBottomOf="@+id/shouyefragment_imagerview_rexiaoshangpin"
        android:textColor="#666666"
        android:textSize="12sp"
        tools:layout_editor_absoluteY="116dp"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/shouyefragment_textview_rexiaoshangpinxiazuo"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/shouyefragment_textview_rexiaoshangpinshang"
        android:textSize="14sp"


        android:textColor="#ff0000"
        android:text="asd"/>

    <TextView
        android:id="@+id/shouyefragment_textview_rexiaoshangpinxiayou"
        android:text="asd"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/shouyefragment_textview_rexiaoshangpinshang"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/shouyefragment_textview_rexiaoshangpinxiazuo"
        />

</android.support.constraint.ConstraintLayout>